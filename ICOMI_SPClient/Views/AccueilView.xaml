                    <TextBlock Text="Qu'est-ce que le carnet sanitaire ?"  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="24" Foreground="{DynamicResource AccentColorBlueBrush}" Margin="50,20,50,0" FontWeight="Bold"/>
                    <TextBlock Text="Le carnet sanitaire constitue le référentiel de la sécurité sanitaire des réseaux d'eau."  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="16" Foreground="{DynamicResource AccentColorBlueBrush}" Margin="50,10,50,0"/>
                    <TextBlock Text="Ce document doit être mis en place pour chaque installation (article R1321-23 du code de la santé publique)."  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="16" Foreground="{DynamicResource AccentColorBlueBrush}" Margin="50,10,50,0"/>
                    <TextBlock Text="Il a pour objectif de centraliser l'ensemble des informations sur l'installation et d'assurer la traçabilité de son exploitation."  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="16" Foreground="{DynamicResource AccentColorBlueBrush}" Margin="50,10,50,0"/>
                    <TextBlock Text="Il permet ainsi le suivi :"  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="16" Foreground="{DynamicResource AccentColorBlueBrush}" Margin="50,10,50,0"/>
                    <TextBlock Text="  ✔ des opérations d'entretien et de maintenance ;"  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="16" Foreground="{DynamicResource AccentColorBlueBrush}" Margin="50,10,50,0"/>
                    <TextBlock Text="  ✔ des paramètres de surveillance de la qualité de l'eau et des réseaux ;"  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="16" Foreground="{DynamicResource AccentColorBlueBrush}" Margin="50,10,50,0"/>
                    <TextBlock Text="  ✔ de la température."  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="16" Foreground="{DynamicResource AccentColorBlueBrush}" Margin="50,10,50,0"/>

