							<Grid>
								<Grid.RowDefinitions>
	                				<RowDefinition Height="40"/>
									<RowDefinition Height="40"/>
									<RowDefinition Height="40"/>
	                				<RowDefinition Height="*"/>
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>                			
	                				<ColumnDefinition Width="200"/>                			
	                				<ColumnDefinition Width="*"/>
                				</Grid.ColumnDefinitions>
								<TextBlock Grid.Row="0" Text="Diagnostic réalisé ? "  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="18.667" Foreground="{DynamicResource AccentColorBlueBrush}"/>
