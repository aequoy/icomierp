									<RadioButton Grid.Column="2" Content="Bouclé partiellement" GroupName="Typeecs" VerticalContentAlignment="Center" Margin="0,0,20,0"/>
									<RadioButton Grid.Column="3" Content="Bouclé intégralement" GroupName="Typeecs" VerticalContentAlignment="Center" Margin="0,0,20,0"/>
