										<Controls:ToggleSwitchButton x:Name="SwitchEF"										
												VerticalAlignment="Top" HorizontalAlignment="Right" >
			                				<i:Interaction.Triggers>
			                					<i:EventTrigger EventName="Checked">
			                						<ei:ChangePropertyAction TargetName="textBlock2" PropertyName="Text" Value="Oui"/>	
													<ei:ChangePropertyAction TargetName="ReseauxEF" PropertyName="Opacity" Value="1"/>											
			                					</i:EventTrigger>
												<i:EventTrigger EventName="Unchecked">
			                						<ei:ChangePropertyAction TargetName="textBlock2" PropertyName="Text" Value="Non"/>
													<ei:ChangePropertyAction TargetName="ReseauxEF" PropertyName="Opacity" Value="0"/>												
			                					</i:EventTrigger>
			                				</i:Interaction.Triggers>	                			
			                			</Controls:ToggleSwitchButton>
										<TextBlock x:Name="textBlock2" Text="Non"  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="18.667" Foreground="{DynamicResource AccentColorBlueBrush}"/>											
									</StackPanel>
								</StackPanel>
