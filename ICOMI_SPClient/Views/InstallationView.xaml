									<RowDefinition Height="40"/>
	                				<RowDefinition Height="40"/>
	                				<RowDefinition/>
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>                			
	                				<ColumnDefinition Width="430"/>                			
	                				<ColumnDefinition Width="*"/>
                				</Grid.ColumnDefinitions>
