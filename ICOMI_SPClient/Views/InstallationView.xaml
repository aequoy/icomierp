                                         HorizontalAlignment="Left"
                                        />	
										<TextBlock Text="°C"  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="18.667" Foreground="{DynamicResource AccentColorBlueBrush}"/>
								</StackPanel>
