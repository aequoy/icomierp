									<ToggleButton Margin="0,0,10,0" Content="Autre" VerticalContentAlignment="Center" Width="150" FontSize="16">
										<i:Interaction.Triggers>
		                					<i:EventTrigger EventName="Checked">		                						
												<ei:ChangePropertyAction TargetName="AutreReseauxEF" PropertyName="Opacity" Value="1"/>
		                					</i:EventTrigger>
											<i:EventTrigger EventName="Unchecked">		                						
												<ei:ChangePropertyAction TargetName="AutreReseauxEF" PropertyName="Opacity" Value="0"/>
		                					</i:EventTrigger>
		                				</i:Interaction.Triggers>
									</ToggleButton>
									<TextBox x:Name="AutreReseauxEF"  Width="300"  Opacity="0" 
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left"
                                        />	
								</StackPanel> 
								<Grid Grid.Row="5">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="300"/>
										<ColumnDefinition Width="100"/>
										<ColumnDefinition Width="100"/>
										<ColumnDefinition Width="110"/>
									</Grid.ColumnDefinitions>
									<TextBlock Text="Calorifugeage des canalisations d'EF "  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="18.667" Foreground="{DynamicResource AccentColorBlueBrush}"/>
									<RadioButton Grid.Column="1" Content="Intégral" GroupName="ef" VerticalContentAlignment="Center" Margin="0,0,20,0"/>
									<RadioButton Grid.Column="2" Content="Partiel" GroupName="ef" VerticalContentAlignment="Center" Margin="0,0,20,0"/>
									<RadioButton Grid.Column="3" Content="Inexistant" GroupName="ef" VerticalContentAlignment="Center" Margin="0,0,20,0"/>
								</Grid>
								<Grid Grid.Row="6">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="300"/>
										<ColumnDefinition Width="100"/>
										<ColumnDefinition Width="100"/>
										<ColumnDefinition Width="110"/>
									</Grid.ColumnDefinitions>
									<TextBlock Text="Calorifugeage des canalisations d'ECS "  TextWrapping="Wrap" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="18.667" Foreground="{DynamicResource AccentColorBlueBrush}"/>
									<RadioButton Grid.Column="1" Content="Intégral" GroupName="ecs" VerticalContentAlignment="Center" Margin="0,0,20,0"/>
									<RadioButton Grid.Column="2" Content="Partiel" GroupName="ecs" VerticalContentAlignment="Center" Margin="0,0,20,0"/>
									<RadioButton Grid.Column="3" Content="Inexistant" GroupName="ecs" VerticalContentAlignment="Center" Margin="0,0,20,0"/>
								</Grid>
