									<StackPanel Grid.Row="2" HorizontalAlignment="Left" Margin="50,0,0,0">
										<Button Content="Ajouter un appareil"/>
									</StackPanel>
								</Grid>
							</GroupBox>
					</Grid>
                </TabItem>
				<TabItem Header="_Production Traitements |">
                	<Grid Margin="0,20">
                		<Grid.RowDefinitions>                			
                			<RowDefinition Height="0.5*"/>                			
                			<RowDefinition Height="0.5*"/>
                		</Grid.RowDefinitions>
                		<GroupBox Header="Production" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="18.667" Foreground="{DynamicResource AccentColorBlueBrush}">
							<Grid>
								<Grid.RowDefinitions>
	                				<RowDefinition Height="40"/>
