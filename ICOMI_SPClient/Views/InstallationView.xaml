									<RadioButton Margin="0,0,10,0" GroupName="grpAlimFroide" Content="Distribution publique" VerticalContentAlignment="Center"/>
									<RadioButton Margin="0,0,10,0" GroupName="grpAlimFroide" Content="Forage" VerticalContentAlignment="Center"/>
