                                </ComboBox>
							</Grid>                			          		
						</GroupBox>   
						<GroupBox Header="Alimentation" Grid.Row="1" FontFamily="{DynamicResource HeaderFontFamily}" FontSize="18.667" Foreground="{DynamicResource AccentColorBlueBrush}">
