		                					<i:EventTrigger EventName="Checked">		                						
												<ei:ChangePropertyAction TargetName="Autre" PropertyName="Opacity" Value="1"/>
		                					</i:EventTrigger>
											<i:EventTrigger EventName="Unchecked">		                						
												<ei:ChangePropertyAction TargetName="Autre" PropertyName="Opacity" Value="0"/>
		                					</i:EventTrigger>
		                				</i:Interaction.Triggers>
